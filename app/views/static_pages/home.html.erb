<% if logged_in? %>
	<% provide(:title, "Home") %>
	<div class="row">
		<aside class="col-md-3">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
		</aside>
		<div class="col-md-6">
			<section class="micropost-form">
				<%= render 'shared/micropost_form' %>
			</section>
			<section class="micropost-feed">
				<%= render 'shared/feed' %>
			</section>
		</div>
	</div>
<% else %>
	<% provide(:title, "Sign Up") %>
	<div class="row">
		<div class="col-md-6">
			<h1>Connect with friends and the world around you on Twitta.</h1>

			<div class="row">
				<div class="col-md-1">
					<h2 class="feature"><i class="fa fa-newspaper-o"></i></h3>
					<h2 class="feature"><i class="fa fa-bullhorn"></i></h3>
					<h2 class="feature"><i class="fa fa-share-alt"></i></h3>
				</div>
				<div class="col-md-11">
					<h2 class="feature">See photos and updates <small>from your friends.</small></h3>
					<h2 class="feature">Share what's new <small>in your life on your feed.</small></h3>
					<h2 class="feature">Find more <small>details with Dynamic Search.</small></h3>
				</div>
			</div>
		</div>

		<div class="col-md-6">
			<div class="row">
			    <%= render 'shared/user_info_form' %>
			</div>
		</div>
	</div>

	<!-- Log In Modal -->
	<div class="modal fade" id="login_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-md">
			<div class="modal-content">

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
					<h4 class="modal-title text-center" id="login-header">Sign in</h4>
				</div>

				<div class="modal-body">
					<div class="row">
					  <div class="col-sm-8 col-sm-offset-2">
					    <%= form_for(:session, url: login_path) do |f| %>
							<div class="form-group">
					    		<%= f.label :email %>
					    		<%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
					    	</div>
						
							<div class="form-group">
					    		<%= f.label :password %>
					    		<span class=""><small>(<%= link_to "Forgot your password?", new_password_reset_path %></small>)</span>
					    		<%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
					    	</div>

					        <div class="form-group">
					            <%= f.check_box :remember_me %>
					            <span>Remember me on this computer</span>
					        </div>
							
							<div class="form-group">
					    		<%= f.submit "Sign in", class: "btn btn-block btn-primary" %>
					    	</div>
					    <% end %>

					    <p class="pull-left"><small>New user? <%= link_to "Sign up now!", root_path %></small></p>
					  </div>
					</div>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- end log in modal -->

	<!-- Terms and Conditions Modal -->
	<div class="modal fade" id="t_and_c_m" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
					<h4 class="modal-title" id="myModalLabel">Terms &amp; Conditions</h4>
				</div>
				<div class="modal-body">
