<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= link_to gravatar_for(@user), @user %>
        <h1><%= @user.name %></h1>
        <span><%= pluralize(@user.microposts.count, "micropost") %></span>
      </section>
    </aside>
    <div class="col-md-6">
      <section class="micropost-feed">
        <% if @feed_items.any? %>
          <ol class="microposts" id="show-feed">
            <%= render @feed_items %>
          </ol>
          <%= will_paginate @feed_items %>
        <% end %>
      </section>
    </div>
    <div class="col-md-3">
      
    </div>
  </div>