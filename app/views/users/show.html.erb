<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
      </section>
    </aside>
    <div class="col-md-6">
      <section class="micropost-feed">
        <%= render 'follow_form' if logged_in? %>
        <% if @feed_items.any? %>
          <ol class="microposts" id="show-feed">
            <%= render @feed_items %>
          </ol>
          <%= will_paginate @feed_items %>
        <% end %>
      </section>
    </div>
    <div class="col-md-3">

    </div>
  </div>
